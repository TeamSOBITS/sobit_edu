<?xml version="1.0" encoding="UTF-8" ?>

<robot name="urg" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="urg" params="prefix parent">
    <joint name="${prefix}_base_joint" type="fixed">
      <origin xyz="0.08525 0.0 0.008" rpy="0.0 0.0 0.0" />
      <parent link="${parent}" />
      <child link="${prefix}_base_link" />
      <axis xyz="0 0 1" />
      <limit effort="30" lower="-3.14" upper="3.14" velocity="1.571" />
    </joint>

    <link name="${prefix}_base_link">
      <visual>
        <origin rpy="0.0 0.0 ${M_PI}" xyz="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/sensor/urg_base.stl" scale="0.001 0.001 0.001" />
        </geometry>
        <material name="black" />
      </visual>
      <collision>
        <origin rpy="0.0 0.0 ${M_PI}" xyz="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/sensor/urg_base.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0 0.0" />
        <mass value="0.000001" />
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                 iyy="0.0001" iyz="0.0"
                 izz="0.0001" />
      </inertial>
    </link>

    <xacro:hokuyo_ust_mount prefix="urg" parent="${prefix}_base_link" topic="scan" >
      <origin xyz="0.1105 0.0 0.0" rpy="0.0 0.0 0.0" />
    </xacro:hokuyo_ust_mount>

  </xacro:macro>
</robot>
