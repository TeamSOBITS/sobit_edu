<?xml version="1.0" encoding="UTF-8" ?>

<!-- check! https://answers.ros.org/question/11807/two-joints-for-one-link/ -->
<robot name="hand" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find sobit_education_description)/urdf/hand/hand.transmission.xacro" />
  
  <xacro:macro name="hand" params="prefix_hand prefix_finger parent">
    <xacro:hand_transmission prefix="${prefix_hand}" />

    <joint name="${prefix_hand}_base_joint" type="revolute">
      <parent link="${parent}" />
      <child link="${prefix_hand}_base_link" />
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
      <limit lower="-1.570796327" upper="0" effort="1" velocity="1" />
    </joint>

    <link name="${prefix_hand}_base_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/hand_back.stl" scale="0.001 0.001 0.001" />
        </geometry>
        <material name="black" />
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/hand_back.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0"
                 izz="1.0" />
      </inertial>
    </link>


    <joint name="${prefix_hand}_inner_l_joint" type="revolute">
      <parent link="${prefix_hand}_base_link" />
      <child link="${prefix_hand}_inner_l_link" />
      <origin xyz="-0.028 0.0150335 0.077436" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 -1" />
      <limit lower="-1.570796327" upper="0" effort="1" velocity="1" />
      <!-- <mimic joint="${prefix_hand}_joint" multiplier="-1.0" offset="0" /> -->
    </joint>

    <link name="${prefix_hand}_inner_l_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/hand_link_inner_l.stl" scale="0.001 0.001 0.001" />
        </geometry>
        <material name="black" />
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/hand_link_inner_l.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0"
                 izz="1.0" />
      </inertial>
    </link>


    <joint name="${prefix_hand}_inner_r_joint" type="revolute">
      <parent link="${parent}" />
      <child link="${prefix_hand}_inner_r_link" />
      <origin xyz="-0.028 -0.0150335 0.077436" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 -1" />
      <limit lower="-1.570796327" upper="0" effort="1" velocity="1" />
      <!-- <mimic joint="${prefix_hand}_joint" multiplier="1.0" offset="0" /> -->
    </joint>

    <link name="${prefix_hand}_inner_r_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/hand_link_inner_r.stl" scale="0.001 0.001 0.001" />
        </geometry>
        <material name="black" />
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/hand_link_inner_r.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0"
                 izz="1.0" />
      </inertial>
    </link>


    <joint name="${prefix_hand}_outer_l_joint" type="revolute">
      <parent link="${parent}" />
      <child link="${prefix_hand}_outer_l_link" />
      <origin xyz="-0.028 0.04 0.059065" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
      <limit lower="-1.570796327" upper="0" effort="1" velocity="1" />
      <!-- <mimic joint="${prefix_hand}_joint" multiplier="-1.12" offset="0" /> -->
    </joint>

    <link name="${prefix_hand}_outer_l_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/hand_link_outer_l.stl" scale="0.001 0.001 0.001" />
        </geometry>
        <material name="black" />
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/hand_link_outer_l.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0"
                 izz="1.0" />
      </inertial>
    </link>


    <joint name="${prefix_hand}_outer_r_joint" type="revolute">
      <parent link="${parent}" />
      <child link="${prefix_hand}_outer_r_link" />
      <origin xyz="-0.028 -0.04 0.059065" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
      <limit lower="-1.570796327" upper="0" effort="1" velocity="1" />
      <!-- <mimic joint="${prefix_hand}_joint" multiplier="1.12" offset="0" /> -->
    </joint>

    <link name="${prefix_hand}_outer_r_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/hand_link_outer_r.stl" scale="0.001 0.001 0.001" />
        </geometry>
        <material name="black" />
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/hand_link_outer_r.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0"
                 izz="1.0" />
      </inertial>
    </link>


    <joint name="${prefix_hand}_${prefix_finger}_l_joint" type="revolute">
      <parent link="${prefix_hand}_outer_l_link" />
      <child link="${prefix_hand}_${prefix_finger}_l_link" />
      <origin xyz="0.019 0.0 0.070114" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
      <limit lower="-1.570796327" upper="0" effort="1" velocity="1" />
      <!-- <mimic joint="${prefix_hand}_joint" multiplier="0.84" offset="0" /> -->
    </joint>

    <link name="${prefix_hand}_${prefix_finger}_l_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/hand_finger_l.stl" scale="0.001 0.001 0.001" />
        </geometry>
        <material name="black" />
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/hand_finger_l.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0"
                 izz="1.0" />
      </inertial>
    </link>


    <joint name="${prefix_hand}_${prefix_finger}_r_joint" type="revolute">
      <parent link="${prefix_hand}_outer_r_link" />
      <child link="${prefix_hand}_${prefix_finger}_r_link" />
      <origin xyz="0.019 0.0 0.070114" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
      <limit lower="-1.570796327" upper="0" effort="1" velocity="1" />
      <!-- <mimic joint="${prefix_hand}_joint" multiplier="-0.84" offset="0" /> -->
    </joint>

    <link name="${prefix_hand}_${prefix_finger}_r_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/hand_finger_r.stl" scale="0.001 0.001 0.001" />
        </geometry>
        <material name="black" />
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/hand_finger_r.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0"
                 izz="1.0" />
      </inertial>
    </link>

  </xacro:macro>
</robot>