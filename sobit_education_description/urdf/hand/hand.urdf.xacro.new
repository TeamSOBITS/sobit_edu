<?xml version="1.0" encoding="UTF-8" ?>
<robot name="hand" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find sobit_education_description)/urdf/hand/hand.transmission.xacro" />

  <xacro:macro name="hand" params="prefix_hand prefix_finger parent">

    <joint name="${prefix_hand}_joint" type="revolute">
      <parent link="${parent}" />
      <child link="${prefix_hand}_link" />
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
      <limit lower="-1.570796327" upper="0" effort="1" velocity="1"/>
    </joint>

    <link name="${prefix_hand}_link">
      <!-- <visual>
        <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/sobit_edu_hand_base.dae"/>
        </geometry>
      </visual>
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0.08"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
      </inertial> -->
    </link>

    <joint name="${prefix_hand}_inner_r_joint" type="revolute">
      <parent link="${parent}" />
      <child link="${prefix_hand}_inner_r_link" />
      <origin xyz="-0.015 -0.07811569 0.02333593" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 -1" />
      <limit lower="-1.570796327" upper="0" effort="1" velocity="1"/>
      <mimic joint="${prefix_hand}_joint" multiplier="1.0" offset="0"/>
    </joint>

    <link name="${prefix_hand}_inner_r_link">
      <visual>
        <origin xyz="0.015 0.31048 -0.121822" rpy="1.570796327 0 0" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/sobit_edu_hand_i_r.dae"/>
        </geometry>
      </visual>
    </link>

    <joint name="${prefix_hand}_inner_l_joint" type="revolute">
      <parent link="${parent}" />
      <child link="${prefix_hand}_inner_l_link" />
      <origin xyz="0.015 -0.07811569 0.02333593" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 -1" />
      <limit lower="-1.570796327" upper="0" effort="1" velocity="1"/>
      <mimic joint="${prefix_hand}_joint" multiplier="-1.0" offset="0"/>
    </joint>

    <link name="${prefix_hand}_inner_l_link">
      <visual>
        <origin xyz="-0.015 0.31048 -0.121822" rpy="1.570796327 0 0" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/sobit_edu_hand_i_l.dae"/>
        </geometry>
      </visual>
    </link>

    <joint name="${prefix_hand}_outer_r_joint" type="revolute">
      <parent link="${parent}" />
      <child link="${prefix_hand}_outer_r_link" />
      <origin xyz="-0.04 -0.0580698 0.02333593" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
      <limit lower="-1.570796327" upper="0" effort="1" velocity="1"/>
      <mimic joint="${prefix_hand}_joint" multiplier="1.12" offset="0"/>
    </joint>

    <link name="${prefix_hand}_outer_r_link">
      <visual>
        <origin xyz="0.04 0.29043411 -0.121822" rpy="1.570796327 0 0" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/sobit_edu_hand_o_r.dae"/>
        </geometry>
      </visual>
    </link>

    <joint name="${prefix_hand}_outer_l_joint" type="revolute">
      <parent link="${parent}" />
      <child link="${prefix_hand}_outer_l_link" />
      <origin xyz="0.04 -0.0580698 0.02333593" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
      <limit lower="-1.570796327" upper="0" effort="1" velocity="1"/>
      <mimic joint="${prefix_hand}_joint" multiplier="-1.12" offset="0"/>
    </joint>

    <link name="${prefix_hand}_outer_l_link">
      <visual>
        <origin xyz="-0.04 0.29043411 -0.121822" rpy="1.570796327 0 0" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/sobit_edu_hand_o_l.dae"/>
        </geometry>
      </visual>
    </link>

    <joint name="${prefix_finger}_r_joint" type="revolute">
      <parent link="${prefix_hand}_inner_r_link" />
      <child link="${prefix_finger}_r_link" />
      <origin xyz="0 -0.080001 0" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
      <limit lower="-1.570796327" upper="0" effort="1" velocity="1"/>
      <mimic joint="${prefix_hand}_joint" multiplier="-0.84" offset="0"/>
    </joint>

    <link name="${prefix_finger}_r_link">
      <visual>
        <origin xyz="0.015 0.390481 -0.121822" rpy="1.570796327 0 0" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/sobit_edu_finger_r.dae"/>
        </geometry>
      </visual>
    </link>

    <joint name="${prefix_finger}_l_joint" type="revolute">
      <parent link="${prefix_hand}_inner_l_link" />
      <child link="${prefix_finger}_l_link" />
      <origin xyz="0 -0.080001 0" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
      <limit lower="-1.570796327" upper="0" effort="1" velocity="1"/>
      <mimic joint="${prefix_hand}_joint" multiplier="0.84" offset="0"/>
    </joint>

    <link name="${prefix_finger}_l_link">
      <visual>
        <origin xyz="-0.015 0.390481 -0.121822" rpy="1.570796327 0 0" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/hand/sobit_edu_finger_l.dae"/>
        </geometry>
      </visual>
    </link>

    <xacro:hand_transmission prefix="${prefix_hand}"/>

  </xacro:macro>
</robot>