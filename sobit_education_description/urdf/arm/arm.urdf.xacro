<?xml version="1.0" encoding="UTF-8" ?>

<robot name="arm" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find sobit_education_description)/urdf/arm/arm.transmission.xacro" />
  <xacro:macro name="arm" params="prefix parent">
    <!-- Include transmission rules -->
    <xacro:arm_transmission prefix="${prefix}" />

    <joint name="${prefix}_base_joint" type="fixed">
      <parent link="${parent}" />
      <child link="${prefix}_base_link" />
      <origin xyz="0.127231 0.0 0.0" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
      <!-- <limit effort="30" lower="${-M_PI}" upper="${M_PI}" velocity="${M_PI/2.0}" /> -->
    </joint>

    <link name="${prefix}_base_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/arm/arm_base.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </visual>
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0"
                 izz="1.0" />
      </inertial>
    </link>

    <joint name="${prefix}_shoulder_pan_joint" type="revolute">
      <parent link="${prefix}_base_link" />
      <child link="${prefix}_shoulder_pan_link" />
      <origin xyz="0.0 0.00875 0.043" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 -1" />
      <limit effort="30" lower="${-M_PI}" upper="${M_PI}" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_shoulder_pan_link">
      <visual>
        <origin xyz="0.0 0 0.0" rpy="0.0 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/arm/arm_rotate.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </visual>
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0"
                 izz="1.0" />
      </inertial>
    </link>

    <joint name="${prefix}_shoulder_1_tilt_joint" type="revolute">
      <parent link="${prefix}_shoulder_pan_link" />
      <child link="${prefix}_shoulder_1_tilt_link" />
      <origin xyz="0.0 0.0 0.0405" rpy="0 0 ${M_PI}" />
      <axis xyz="0 -1 0" />
      <limit effort="30" lower="${-M_PI/2.0}" upper="${M_PI/2.0}" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_shoulder_1_tilt_link">
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
    </link>

    <joint name="${prefix}_shoulder_2_tilt_joint" type="revolute">
      <parent link="${prefix}_shoulder_pan_link" />
      <child link="${prefix}_shoulder_2_tilt_link" />
      <origin xyz="0.0 0.0 0.0405" rpy="0.0 0.0 0.0" />
      <axis xyz="0 -1 0" />
      <limit effort="30" lower="${-M_PI/2.0}" upper="${M_PI/2.0}" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_shoulder_2_tilt_link">
      <visual>
        <origin xyz="0 0.0 0.0" rpy="0.0 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/arm/arm_upper.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </visual>
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0"
                 izz="1.0" />
      </inertial>
    </link>

    <joint name="${prefix}_elbow_1_tilt_joint" type="revolute">
      <parent link="${prefix}_shoulder_2_tilt_link" />
      <child link="${prefix}_elbow_1_tilt_link" />
      <origin xyz="0.02538 0.0 0.148" rpy="0 0 ${M_PI}" />
      <axis xyz="0 -1 0" />
      <limit effort="30" lower="${-M_PI/2.0}" upper="1.4155" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_elbow_1_tilt_link">
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
    </link>

    <joint name="${prefix}_elbow_2_tilt_joint" type="revolute">
      <parent link="${prefix}_shoulder_2_tilt_link" />
      <child link="${prefix}_elbow_2_tilt_link" />
      <origin xyz="0.02538 0.0 0.148" rpy="0.0 0.0 0.0" />
      <axis xyz="0 -1 0" />
      <limit effort="30" lower="${-M_PI/2.0}" upper="1.4155" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_elbow_2_tilt_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/arm/arm_lower.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </visual>
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <mass value="0.08" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0"
                 izz="1.0" />
      </inertial>
    </link>

    <joint name="${prefix}_wrist_tilt_joint" type="revolute">
      <parent link="${prefix}_elbow_2_tilt_link" />
      <child link="${prefix}_wrist_tilt_link" />
      <origin xyz="0.0 0.0 0.150019" rpy="0.0 0.0 0.0" />
      <axis xyz="0 -1 0" />
      <limit effort="30" lower="${-M_PI/2.0}" upper="1.4155" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_wrist_tilt_link">
      <!-- <visual>
