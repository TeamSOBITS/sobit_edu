<?xml version="1.0" encoding="UTF-8" ?>
<robot name="arm" 
  xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find sobit_education_description)/urdf/arm/arm.transmission.xacro" />
  <xacro:macro name="arm" params="prefix parent">

    <joint name="${prefix}_base_fixed_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}_base_link"/>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <axis xyz="0 0 1"/>
      <limit effort="30" lower="${-M_PI}" upper="${M_PI}" velocity="${M_PI/2.0}"/>
    </joint>

    <link name="${prefix}_base_link">
      <visual>
        <origin rpy="0 0 0" xyz="0.0845 0 0"/>
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/Manipulator_X4_Joint1_fix.dae"/>
        </geometry>
      </visual>
      <inertial>
        <origin rpy="0 0 0" xyz="0.0845 0 0"/>
        <mass value="0.08"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
      </inertial>
    </link>

    <joint name="${prefix}_roll_joint" type="revolute">
      <parent link="${prefix}_base_link"/>
      <child link="${prefix}_roll_link"/>
      <origin rpy="0 0 0" xyz="0.13577 0.0 0.04314"/>
      <axis xyz="0 0 1"/>
      <limit effort="30" lower="${-M_PI}" upper="${M_PI}" velocity="${M_PI/2.0}"/>
    </joint>

    <link name="${prefix}_roll_link">
      <visual>
        <origin rpy="0 0 0" xyz="-0.001 0 -0.0005"/>
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/Manipulator_X4_Joint2_fix.dae"/>
        </geometry>
      </visual>
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0.0"/>
        <mass value="0.08"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
      </inertial>
    </link>

    <joint name="${prefix}_flex_joint" type="revolute">
      <parent link="${prefix}_roll_link"/>
      <child link="${prefix}_flex_link"/>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0407"/>
      <axis xyz="0 1 0"/>
      <limit effort="30" lower="${-M_PI/2.0}" upper="${M_PI/2.0}" velocity="${M_PI/2.0}"/>
    </joint>

    <link name="${prefix}_flex_link">
      <visual>
        <origin rpy="0 0 0" xyz="0 0.00025 0"/>
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/Manipulator_X4_Joint3_fix.dae"/>
        </geometry>
      </visual>
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0.08"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
      </inertial>
    </link>

    <joint name="elbow_flex_joint" type="revolute">
      <parent link="${prefix}_flex_link"/>
      <child link="elbow_flex_link"/>
      <origin rpy="0 0 0" xyz="0.0235 0.0 0.148"/>
      <axis xyz="0 1 0"/>
      <limit effort="30" lower="${-M_PI/2.0}" upper="1.4155" velocity="${M_PI/2.0}"/>
    </joint>

    <link name="elbow_flex_link"/>

    <joint name="wrist_flex_dummy_joint" type="fixed">
      <parent link="elbow_flex_link"/>
      <child link="wrist_flex_dummy_link"/>
      <origin rpy="0 0 0" xyz="0 0 0.0"/>
      <axis xyz="0 0 1"/>
      <limit effort="30" lower="-0.1" upper="0.1" velocity="${M_PI/2.0}"/>
    </joint>

    <link name="wrist_flex_dummy_link">
      <visual>
        <origin rpy="0 ${M_PI/2.0-0.02} 0" xyz="-0.0005 -0.0001 0"/>
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/Manipulator_X4_Joint4_fix.dae"/>
        </geometry>
      </visual>
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0.08"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
      </inertial>
    </link>

    <joint name="wrist_flex_joint" type="revolute">
      <parent link="wrist_flex_dummy_link"/>
      <child link="wrist_flex_link"/>
      <origin rpy="0 0 0" xyz="0.152 0.0 0.0"/>
      <axis xyz="0 1 0"/>
      <limit effort="30" lower="${-M_PI/2.0}" upper="${M_PI/2.0}" velocity="${M_PI/2.0}"/>
    </joint>

    <link name="wrist_flex_link">
      <visual>
        <origin rpy="0 ${M_PI/2.0} 0" xyz="-0.0005 -0.0001 0"/>
        <geometry>
          <mesh filename="package://sobit_education_description/meshes/Manipulator_X4_Gripper_fix.dae"/>
        </geometry>
      </visual>
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="0.08"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
      </inertial>
    </link>

    <xacro:arm_transmission prefix="${prefix}"/>

  </xacro:macro>
</robot>